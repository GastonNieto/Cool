<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ListaComprasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/titulo_lista"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp" />
                    <ImageButton

                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_lista_todo"
                        />
                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1" />
                    <ImageButton

                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_lista_baja_24"
                        />
                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1" />
                    <ImageButton

                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_lista_media_24dp"
                        />
                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1" />
                    <ImageButton

                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_lista_alta_24dp"
                        />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dip"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="Todo"
                        android:textAlignment="center" />
                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="Baja"
                        android:textAlignment="center" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="Media"
                        android:textAlignment="center" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="Alta"
                        android:textAlignment="center" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="1dp" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvListaCompras"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>